//Bruteforce Approach

class Solution {
    /**
     * Counts the number of reverse pairs in the array.
     * A reverse pair is defined as (i, j) such that:
     *   - i < j
     *   - arr[i] > 2 * arr[j]
     *
     *
     * Example:
     *   Input: [1, 3, 2, 3, 1]
     *   Reverse Pairs: (3,1), (3,1)
     *   Output: 2
     */
    public int reversePairs(int[] arr) {
        int countInversion = 0;

        for (int i = 0; i < arr.length; i++) {
            for (int j = i + 1; j < arr.length; j++) {
                // Use long to avoid integer overflow when doing 2 * arr[j]
                if (arr[i] > 2 * (long) arr[j]) {
                    countInversion++;
                }
            }
        }

        return countInversion;
    }
}

//Optimal Approach

class Solution {
    public int reversePairs(int[] arr) {
        // Uses modified merge sort to count reverse pairs
        return reversePairs(arr, 0, arr.length - 1);
    }

    private int reversePairs(int[] arr, int low, int high) {
        int inversionCount = 0;

        if (low < high) {
            int mid = low + (high - low) / 2;

            // Count reverse pairs in the left half
            inversionCount += reversePairs(arr, low, mid);

            // Count reverse pairs in the right half
            inversionCount += reversePairs(arr, mid + 1, high);

            // Count cross reverse pairs and merge the two sorted halves
            inversionCount += merge(arr, low, mid, high);
        }

        return inversionCount;
    }

    private int merge(int[] arr, int low, int mid, int high) {
        int leftSize = mid - low + 1, rightSize = high - mid;

        int[] left = new int[leftSize];
        int[] right = new int[rightSize];

        // Copy elements into temporary left array
        for (int i = 0; i < leftSize; i++) {
            left[i] = arr[low + i];
        }

        // Copy elements into temporary right array
        for (int i = 0; i < rightSize; i++) {
            right[i] = arr[mid + 1 + i];
        }

        // Count reverse pairs between left and right arrays
        int inversionCount = countInversions(left, right);

        // Standard merge process
        int i = 0, j = 0, k = low;

        while (i < leftSize && j < rightSize) {
            if (left[i] <= right[j]) {
                arr[k++] = left[i++];
            } else {
                arr[k++] = right[j++];
            }
        }

        // Copy remaining elements
        while (i < leftSize) {
            arr[k++] = left[i++];
        }

        while (j < rightSize) {
            arr[k++] = right[j++];
        }

        return inversionCount;
    }

    /*
     Counts reverse pairs across two sorted arrays.
    
     Reverse pair condition:
         left[i] > 2 * right[j]
    
     Important edge case (negative numbers):
    
     arr[] = {-5, -5}
     left  = {-5}
     right = {-5}
    
     Check:
         left[i] > 2 * right[j]
         -5 > 2 * (-5)
         -5 > -10  â†’ TRUE
    
     Hence, this is a valid reverse pair.
    
     If we had checked the condition
         left[i] <= right[j]
     before checking
         left[i] > 2 * (long) right[j],
     this case would have been missed.
    
     This happens especially with negative numbers, where
     left[i] <= right[j] can be true even though
     left[i] > 2 * right[j] is also true.
    
     Therefore, the condition
         left[i] > 2 * (long) right[j]

     MUST be evaluated first to correctly count all reverse pairs.
    */
    private int countInversions(int[] left, int[] right) {
        int i = 0, j = 0, inversionCount = 0;

        /*
         Reverse pair example:
        
         left  = {1, 13, 30, 80, 90}
         right = {2, 3, 12, 70}
        
         Reverse pairs:
         (13,2), (30,2), (80,2), (90,2)
         (13,3), (30,3), (80,3), (90,3)
         (30,12), (80,12), (90,12)
        
         Important observation:
         There are cases where left[i] > right[j]
         but left[i] is NOT greater than 2 * right[j].
         In such cases, we must move 'i' forward instead of 'j'.
        */
        while (i < left.length && j < right.length) {
            if (left[i] > 2 * (long) right[j]) {
                // All remaining elements in left[] i.e from index 'i' to index 'left.length - 1' will also satisfy the condition
                inversionCount += (left.length - i);
                j++;
            } else {
                // Move i forward to try a larger value
                i++;
            }
        }

        return inversionCount;
    }
}
