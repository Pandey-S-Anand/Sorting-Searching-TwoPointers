//Bruteforce Approach

public class Solution {
    public static int lowerBound(int[] arr, int n, int x) {
        for (int i = 0; i < n; i++) {
            // As soon as we find an element >= x, we return its index
            if (arr[i] >= x) {
                return i;
            }
        }

        // If no such element is found, return n (insertion at end)
        return n;
    }
}



//Optimal Approach

public class Solution {
    public static int lowerBound(int[] arr, int n, int x) {
        /*
         Objective:
         ----------
         Find the smallest index 'idx' such that:
             arr[idx] >= x
        
         If no such index exists (i.e., all elements are smaller than x),
         return 'n' (the size of the array).
        
         Example:
         --------
         arr = [1, 2, 2, 3, 3, 5]
         x   = 2
        
         The first index where arr[idx] >= 2 is:
         idx = 1  (arr[1] = 2)
        
         So, lowerBound(arr, n, 2) returns 1.
        */

        int low = 0, high = n - 1;

        /*
         Initialize lower bound as 'n'.
         This acts as the default answer when
         x is greater than all elements in the array.
        */
        int lb = n;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            /*
             If arr[mid] is greater than or equal to x,
             mid is a valid lower bound candidate.
             Store it and search the left half to find
             a smaller valid index.
            */
            if (arr[mid] >= x) {
                lb = mid;
                high = mid - 1;
            } else if (arr[mid] < x) {
                /*
                If arr[mid] is smaller than x,
                the lower bound must lie in the right half.
                */
                low = mid + 1;
            }
        }

        /*
         lb contains:
         - Index of the first element >= x, OR
         - n if no such element exists.
        */
        return lb;
    }
}
