//Method 1

class Solution {
    public void sortIt(int arr[]) {
        /**
        * Partition the array so that all odd numbers are at the front.
        *
        * At the end:
        * - All indices [0, firstEvenIndex - 1] contain odd numbers.
        * - All indices [firstEvenIndex , arr.length - 1] contain even numbers.
        */
        int firstEvenIndex = moveOddToFront(arr);

        // Step 2: Sort the odd part (index 0 to 'firstEvenIndex - 1') in ascending order and then reverse it to make it descending.
        Arrays.sort(arr, 0, firstEvenIndex);
        // Reverses the subarray from index 0 to idx (inclusive) to convert the sorted odd section into descending order.
        reverse(arr, firstEvenIndex - 1);

        // Step 3: Sort the even part (from index 'firstEvenIndex' to 'arr.length - 1') in ascending order.
        Arrays.sort(arr, firstEvenIndex, arr.length);
    }

    private int moveOddToFront(int[] arr) {
        int i = 0, oddTracker = 0; // `oddTracker` keeps track of the position where the next odd number should be placed.

        while (i < arr.length) {
            if (arr[i] % 2 != 0) {
                // Swap current odd element to its correct position
                swap(arr, i, oddTracker);
                i++;
                oddTracker++;
            } else {
                // Skip even elements
                i++;
            }
        }

        return oddTracker; // Index where even numbers start
    }

    private void swap(int[] arr, int i, int j) {
        int temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }

    private void reverse(int[] arr, int idx) {
        int i = 0, j = idx;

        while (i < j) {
            swap(arr, i++, j--);
        }
    }
}



// Method 2 : This method will not work when input array contains negative numbers.

class Solution {
    public void sortIt(int arr[]) {
          // Step 1: Convert all odd numbers to negative. This ensures that odd numbers appear before even numbers when sorted
        for (int i = 0; i < arr.length; i++) {
            if ((arr[i] & 1) == 1) { // Check if the number is odd
                arr[i] *= -1; // Convert odd numbers to negative
            }
        }

        // Step 2: Sort the array.:  Negative odd numbers come first , followed by positive even numbers in ascending order.
        Arrays.sort(arr);

        // Step 3: Convert all elements back to positive.
        /* 
           This restores original values, but now in the required order:
         - Odd numbers in descending order
         - Even numbers in ascending order
         */
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] < 0) {
                arr[i] *= -1;
            }
        }
    }
}
