// Bruteforce Approach

class Solution {
    public int[] searchRange(int[] arr, int target) {
        int idx = binarySearch(arr, target);

        // If the target is not present at all
        if (idx == -1) {
            return new int[] { -1, -1 };
        }

        // Move left to find the first occurrence
        int firstIdx = idx;
        while (firstIdx >= 0 && arr[firstIdx] == arr[idx]) {
            firstIdx--;
        }
        // After the loop, firstIdx has moved one position BEFORE the first valid target, so we increment it once to get the correct first occurrence.
        firstIdx++;

        // Move right to find the last occurrence
        int lastIdx = idx;
        while (lastIdx < arr.length && arr[lastIdx] == arr[idx]) {
            lastIdx++;
        }
        // After the loop, lastIdx has moved one position AFTER the last valid target, so we decrement it once to get the correct last occurrence.
        lastIdx--;

        return new int[] { firstIdx, lastIdx };
    }

    private int binarySearch(int[] arr, int target) {
        int low = 0, high = arr.length - 1;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] == target) {
                return mid;
            } else if (target < arr[mid]) {
                high = mid - 1;
            } else {
                low = mid + 1;
            }
        }

        return -1;
    }
}


// Optimal Approach

class Solution {
    public int[] searchRange(int[] arr, int target) {
        // Find the first occurrence of the target
        int firstIdx = findFirstOccurenceIndex(arr, target);

        // If the target does not exist in the array
        if (firstIdx == -1) {
            return new int[] { -1, -1 };
        }

        // Find the last occurrence of the target
        return new int[] { firstIdx, findLastOccurenceIndex(arr, target) };
    }

    private int findFirstOccurenceIndex(int[] arr, int target) {
        int low = 0, high = arr.length - 1, firstOccurenceIndex = -1;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] == target) {
                firstOccurenceIndex = mid; // record index
                high = mid - 1; // continue searching left
            } else if (target < arr[mid]) {
                high = mid - 1;
            } else {
                low = mid + 1;
            }
        }

        return firstOccurenceIndex;
    }

    private int findLastOccurenceIndex(int[] arr, int target) {
        int low = 0, high = arr.length - 1, lastOccurenceIndex = -1;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] == target) {
                lastOccurenceIndex = mid; // record index
                low = mid + 1; // continue searching right
            } else if (target < arr[mid]) {
                high = mid - 1;
            } else {
                low = mid + 1;
            }
        }

        return lastOccurenceIndex;
    }
}
