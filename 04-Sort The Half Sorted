//Bruteforce Approach

class Solution {
    public void sortHalves(int arr[], int n) {
        Arrays.sort(arr);
    }
}


// Optimal Approach

class Solution {
    public void sortHalves(int[] arr) {
        int splitIndex = findSplitIndex(arr);
        if (splitIndex == -1) {
            return; // array is already fully sorted
        }
        mergeSortedSubarrays(arr, splitIndex);
    }

    //Binary search fails because “two sorted halves” does not create a monotonic condition that tells us which side to move.
    private int findSplitIndex(int[] arr) {
        for (int i = 0; i < arr.length - 1; i++) {
            if (arr[i] > arr[i + 1]) {
                return i;
            }
        }
        return -1;
    }

    private void mergeSortedSubarrays(int[] arr, int splitIndex) {
        int[] left = new int[splitIndex + 1];
        int[] right = new int[arr.length - splitIndex - 1];

        for (int i = 0; i < left.length; i++) {
            left[i] = arr[i];
        }

        for (int i = 0; i < right.length; i++) {
            right[i] = arr[splitIndex + 1 + i];
        }

        int i = 0, j = 0, k = 0;

        while (i < left.length && j < right.length) {
            if (left[i] <= right[j]) {
                arr[k++] = left[i++];
            } else {
                arr[k++] = right[j++];
            }
        }

        while (i < left.length) {
            arr[k++] = left[i++];
        }

        while (j < right.length) {
            arr[k++] = right[j++];
        }
    }
}
