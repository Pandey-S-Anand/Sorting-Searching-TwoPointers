//Bruteforce Approach

class Solution {
    public int findTarget(int arr[], int target) {
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == target) {
                return i;
            }
        }
        // Element is not present in the array
        return -1;
    }
}


//Optimal Approach

class Solution {
    public int findTarget(int arr[], int target) {
        int low = 0, high = arr.length - 1;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            // 1. Check if the mid element is the key
            if (arr[mid] == target) {
                return mid;
            } else if (mid > 0 && arr[mid - 1] == target) { // 2. Since elements can be swapped with adjacent ones, also check the left neighbor of mid (if valid)
                return mid - 1;
            } else if (mid < arr.length - 1 && arr[mid + 1] == target) { // 3. Similarly, check the right neighbor of mid (if valid)
                return mid + 1;
            } else if (target < arr[mid]) { // 4. If key is less than arr[mid], then target can only be present to the left side of mid - 2 (since mid-1 already checked, move high pointer two steps left)
                high = mid - 2;
            } else { // 5. Otherwise, key must be on the right side of mid + 2  (mid+1 already checked, so move low pointer two steps right)
                low = mid + 2;
            }
        }

        // Key not found in the array
        return -1;
    }
}
