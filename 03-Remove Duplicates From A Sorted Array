// Method 1 (Using Extra Space)

class Solution {
    public int removeDuplicates(int[] arr) {
        // Initialize with the first element since it is always unique.
        List<Integer> unique = new ArrayList<>(List.of(arr[0]));

        for (int i = 1; i < arr.length; i++) {
            // If current element is different from the previous one, it means we have found a new unique element.
            if (arr[i] != arr[i - 1]) {
                unique.add(arr[i]);
            }
        }

        // Copy the unique elements back into the original array
        for (int i = 0; i < unique.size(); i++) {
            arr[i] = unique.get(i);
        }

        // Return the count of unique elements
        return unique.size();
    }
}


// Method 2 (Using Extra Space)

class Solution {
    public int removeDuplicates(int[] arr) {
        /*
         * LinkedHashSet is used to:
         * 1) Remove duplicates (Set property)
         * 2) Preserve insertion order (maintains original order)
         */
        Set<Integer> uniqueElements = new LinkedHashSet<>();

        // Add all elements to the set; duplicates are ignored automatically
        for (int val : arr) {
            uniqueElements.add(val);
        }

        // Copy unique elements back into the array
        int idx = 0;
        for (int num : uniqueElements) {
            arr[idx++] = num;
        }

        // Return the count of unique elements
        return idx;
    }
}


// Method 3 (Without Using Extra Space)

class Solution {
    public int removeDuplicates(int[] arr) {
        // Index to place the next unique element.The first element is always unique in a sorted array.
        int idx = 1;

        // Traverse the array starting from the second element.
        for (int i = 1; i < arr.length; i++) {
            // If the current element differs from the previous one,  it means we have found a new unique element.
            if (arr[i] != arr[i - 1]) {
                arr[idx++] = arr[i];
            }
        }

        // idx represents the number of unique elements.
        return idx;
    }
}
